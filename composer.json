{
    "name": "liip/drupal-testing",
    "description": "A library to integrate PHPUnit with Drupal",
    "keywords": ["testing", "phpunit", "drupal"],
    "type": "library",
    "authors": [
        {
            "name": "Daniel Barsotti",
            "email": "daniel.barsotti@liip.ch"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "monolog/monolog": "~1.7",
        "fabpot/goutte": "~1",
        "symfony/console": "~2"
    },
    "autoload": {
        "psr-0": {
            "Liip\\Drupal\\Testing": "src"
        }
    },
    "extra": {
        "installer-paths": {
            "vendor/{$name}": ["liip/drupalconnectormodule"]
        }
    }
}
